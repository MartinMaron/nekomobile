<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textview_border">


    <TextView
        android:id="@+id/tvRaum"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_8"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_10" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="@dimen/dp_faktor_15"
        android:layout_height="@dimen/dp_faktor_10"
        android:layout_toRightOf="@id/tvNummer"
        android:clickable="true"
        android:contentDescription="@string/empty" />

    <TextView
        android:id="@+id/tvNummer"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_8"
        android:layout_toRightOf="@id/tvRaum"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_10" />

    <TextView
        android:id="@+id/tvLetzterWert"
        android:layout_width="@dimen/dp_faktor_60"
        android:layout_height="@dimen/dp_faktor_4"
        android:layout_below="@id/tvNummer"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_06" />

    <TextView
        android:id="@+id/lbAktuell"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_4"
        android:layout_below="@id/tvLetzterWert"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_04" />

    <TextView
        android:id="@+id/lbStichtag"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_4"
        android:layout_below="@id/tvLetzterWert"
        android:layout_toRightOf="@id/tvAktuell"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_04" />

    <TextView
        android:id="@+id/tvAktuell"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_16"
        android:layout_below="@id/lbAktuell"
        android:background="@drawable/textview_border"
        android:contentDescription="@string/empty"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_faktor_2"
        android:textAlignment="gravity"
        android:textColor="@color/dark_slate_gray"

        android:textSize="@dimen/sp_faktor_10" />

    <TextView
        android:id="@+id/tvStichtag"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_16"
        android:layout_below="@id/lbStichtag"
        android:layout_toRightOf="@id/tvAktuell"
        android:background="@drawable/textview_border"
        android:contentDescription="@string/empty"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_faktor_2"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_faktor_10" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="@dimen/dp_faktor_15"
        android:layout_height="@dimen/dp_faktor_10"
        android:layout_below="@id/ivStatus"
        android:layout_toRightOf="@id/tvNummer"
        android:src="@drawable/icon_camera"
        app:srcCompat="@drawable/icon_camera" />

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="@dimen/dp_faktor_15"
        android:layout_height="@dimen/dp_faktor_10"
        android:layout_below="@id/ivPhoto"
        android:layout_toRightOf="@id/tvStichtag"
        android:clickable="true"
        android:contentDescription="@string/empty"
        android:src="@drawable/icon_montage"
        app:srcCompat="@drawable/icon_montage" />

    <TextView
        android:id="@+id/lbDisplayBesonderheiten"
        android:layout_width="@dimen/dp_faktor_120"
        android:layout_height="@dimen/dp_faktor_8"
        android:layout_alignBottom="@id/ivStatus"
        android:layout_toRightOf="@id/ivStatus"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_08" />

    <TextView
        android:id="@+id/lbDisplayBewertungHKArt"
        android:layout_width="@dimen/dp_faktor_120"
        android:layout_height="@dimen/dp_faktor_12"
        android:layout_below="@id/lbDisplayBesonderheiten"
        android:layout_toRightOf="@id/ivPhoto"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_08" />

    <TextView
        android:id="@+id/lbDisplayBewertung"
        android:layout_width="@dimen/dp_faktor_120"
        android:layout_height="@dimen/dp_faktor_12"
        android:layout_below="@id/lbDisplayBewertungHKArt"
        android:layout_toRightOf="@id/ivDetail"
        android:contentDescription="@string/empty"
        android:textColor="@color/navy"
        android:textSize="@dimen/sp_faktor_08" />


</RelativeLayout>