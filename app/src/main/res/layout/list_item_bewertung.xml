<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:background="@drawable/textview_border"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:padding="@dimen/dp_faktor_1"
    android:visibility="visible"
    android:weightSum="100">

        <TextView
            android:id="@+id/tvDisplayBewertung"
            android:layout_width="@dimen/dp_faktor_80"
            android:layout_height="@dimen/dp_faktor_6"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:text="DisplayBewertung"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/sp_faktor_07"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvNutzer_1"
            android:layout_width="@dimen/dp_faktor_80"
            android:layout_height="@dimen/dp_faktor_6"
            android:layout_below="@id/tvDisplayBewertung"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/sp_faktor_06"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvNutzer_2"
            android:layout_width="@dimen/dp_faktor_80"
            android:layout_height="@dimen/dp_faktor_6"
            android:layout_below="@id/tvNutzer_1"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/sp_faktor_06"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvNutzer_3"
            android:layout_width="@dimen/dp_faktor_80"
            android:layout_height="@dimen/dp_faktor_6"
            android:layout_below="@id/tvNutzer_2"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center|left"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/sp_faktor_06"
            android:visibility="visible" />


</RelativeLayout>