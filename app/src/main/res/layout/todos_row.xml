<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_faktor_8"
    android:layout_alignParentStart="true"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="50">


    <ImageView
        android:id="@+id/ivAblesung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/empty"
        android:paddingHorizontal="@dimen/dp_faktor_1"
        android:paddingVertical="@dimen/dp_faktor_1"
        android:src="@drawable/icon_ablesung"
        android:visibility="visible"
        app:srcCompat="@drawable/icon_ablesung"
        tools:layout_width="match_parent" />

    <ImageView
        android:id="@+id/ivRwmWartung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/empty"
        android:paddingHorizontal="@dimen/dp_faktor_1"
        android:paddingVertical="@dimen/dp_faktor_1"
        android:src="@drawable/icon_smoke_detector_b"
        app:srcCompat="@drawable/icon_smoke_detector_b" />

    <ImageView
        android:id="@+id/ivMontage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/empty"
        android:paddingHorizontal="@dimen/dp_faktor_1"
        android:paddingVertical="@dimen/dp_faktor_1"
        android:src="@drawable/icon_montage"
        app:srcCompat="@drawable/icon_montage" />

    <ImageView
        android:id="@+id/ivRwmMontage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/empty"
        android:paddingHorizontal="@dimen/dp_faktor_1"
        android:paddingVertical="@dimen/dp_faktor_1"
        android:src="@drawable/icon_rwm_montage"
        app:srcCompat="@drawable/icon_rwm_montage" />

    <ImageView
        android:id="@+id/ivFunkCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:contentDescription="@string/empty"
        android:paddingHorizontal="@dimen/dp_faktor_1"
        android:paddingVertical="@dimen/dp_faktor_1"
        android:src="@drawable/icon_funk_check"
        app:srcCompat="@drawable/icon_funk_check" />



</LinearLayout>