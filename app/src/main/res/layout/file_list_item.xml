<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_faktor_20"
    android:layout_alignParentStart="true"
    android:background="@drawable/textview_border"
    android:orientation="vertical"
    android:padding="@dimen/dp_faktor_1"
    android:visibility="visible">


    <TextView
        android:id="@+id/txtvDatum"
        android:layout_width="@dimen/dp_faktor_50"
        android:layout_height="@dimen/dp_faktor_7"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/empty"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtvErstelldatum"
        android:layout_width="@dimen/dp_faktor_50"
        android:layout_height="@dimen/dp_faktor_7"
        android:layout_alignParentEnd="true"
        android:text="@string/empty"
        android:textAlignment="viewEnd"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtvRouteName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_faktor_11"
        android:layout_below="@id/txtvDatum"
        android:layout_alignParentStart="true"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:text="@string/empty"
        android:textSize="@dimen/sp_faktor_10"
        android:visibility="visible" />
</RelativeLayout>