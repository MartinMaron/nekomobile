<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dp_faktor_1">


    <ImageView
        android:id="@+id/btShowSontexFunk"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_15"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:clickable="true"
        android:src="@drawable/icon_ablesung_sontex"
        android:text="@string/empty" />

    <ImageView
        android:id="@+id/btShowEximFunk"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_15"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:clickable="true"
        android:src="@drawable/icon_ablesung_exim"
        android:text="@string/empty" />

    <ImageView
        android:id="@+id/btShowStandard"
        android:layout_width="@dimen/dp_faktor_30"
        android:layout_height="@dimen/dp_faktor_15"
        android:layout_alignParentStart="true"
        android:background="@drawable/textview_border"
        android:onClick="onClick"
        android:clickable="true"
        android:src="@drawable/icon_ablesung_manuell"
        android:text="@string/empty" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btShowStandard"
        android:divider="@color/black"
        android:dividerHeight="@dimen/dp_faktor_1"
        android:choiceMode="singleChoice" />

    c
</RelativeLayout>
